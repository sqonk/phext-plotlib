{
    "name": "sqonk/phext-plotlib",
    "description": "PlotLib is a wrapper class for the PHP charting library JPGraph for producing charts in bulk.",
    "type": "library",
    "require": {
		"php": "^7.3 || ^8.0.0",
        "sqonk/phext-core": "^0.3.9 || ^0.4 || ^1"
    },
	"keywords": ["graph","chart","plot"],
    "license": "MIT",
    "authors": [
        {
            "name": "Theo Howell",
            "email": "sqonk@sqonk.com.au"
        }
    ],
	"autoload": {
		"files": [
			"src/BulkPlot.class.php", 
			"src/JPGraphUtils.php", 
			"src/Region.class.php",
            "src/internal/jpgraph/src/jpgraph.php",
            "src/internal/jpgraph/src/jpgraph_line.php",
            "src/internal/jpgraph/src/jpgraph_bar.php",
            "src/internal/jpgraph/src/jpgraph_pie.php",
            "src/internal/jpgraph/src/jpgraph_scatter.php",
            "src/internal/jpgraph/src/jpgraph_stock.php",
            "src/internal/jpgraph/src/jpgraph_plotline.php"
		]
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
